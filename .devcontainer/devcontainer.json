{
	"name": "Professional Flutter Development Environment (Flutter 3.x)",

	"image": "mcr.microsoft.com/devcontainers/flutter:0-3",

	"customizations": {
		"vscode": {
			"extensions": [
				"Dart-Code.flutter",
				"Dart-Code.dart-code",
				"usernamehw.errorlens",
				"SonarSource.sonarlint-vscode",
				"EditorConfig.EditorConfig",
				"jeroen-meijer.pubspec-assist",
				"eamodio.gitlens",
				"GitHub.vscode-pull-request-github",
				"esbenp.prettier-vscode",
				"jock.svg",
				"wayou.vscode-todo-highlight",
				"christian-kohler.path-intellisense"
			],

			"settings": {
				"editor.tabSize": 2,
				"editor.insertSpaces": true,
				"files.autoSave": "afterDelay",
				"files.autoSaveDelay": 1000,
				"workbench.editor.labelFormat": "short",
				"editor.fontLigatures": true,
				"editor.rulers": [80],

				"[dart]": {
					"editor.formatOnSave": true,
					"editor.defaultFormatter": "Dart-Code.dart-code"
				},
				"dart.lineLength": 80,
				"dart.flutterSdkPath": "/usr/local/sdk/flutter",

				"errorLens.enabled": true,
				"errorLens.fontStyle": "italic",
				"errorLens.fontWeight": "bold"
			}
		}
	},

	"postCreateCommand": "flutter doctor && flutter precache --web --android && flutter pub get",

	"forwardPorts": [
		5000,
		9100
	],

	"remoteUser": "vscode"
}
